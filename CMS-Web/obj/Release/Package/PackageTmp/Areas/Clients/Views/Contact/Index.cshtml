                    <a href="@Model.LinkBlog"><i class="zmdi zmdi-blogger"></i></a>
                    <a href="@Model.LinkTwiter"><i class="zmdi zmdi-twitter"></i></a>
                    <a href="@Model.LinkInstagram"><i class="zmdi zmdi-instagram"></i></a>
                    <a href="#"><i class="zmdi zmdi-google-plus"></i></a>
                </div>
            </div>
        </div>
        <!-- Contact Information Container End -->
    </section>
    <section class="contact-form-area pt-100 pb-90 blog-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="section-title text-center">
                            <h1>Thông tin công ty</h1>
                            <span><img src="~/images/banner/koffee.png" alt=""></span>
                            <h4>@Html.Raw(Model.Name)</h4>
                            <br />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <form id="contact-form" action="mail.php" method="post">
                            <input type="text" name="address" placeholder="Địa chỉ" value="@Html.Raw(Model.Address)">
                            <input type="text" name="name" placeholder="Số điện thoại" value="@Html.Raw(Model.Phone)">
                            <input type="email" name="email" placeholder="Email" value="@Html.Raw(Model.Email)">
                            <textarea name="message" cols="30" rows="10" placeholder="Message">@Html.Raw(Model.Description)</textarea>
                        </form>
                        <p class="form-messege"></p>
                    </div>
                </div>
            </div>
        </section>
