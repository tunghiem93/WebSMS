@{
    Layout = null;
}
@model List<CMS_DTO.CMS_DepositTransactionsModel>
@using CMS_Shared
<div class="table-responsive">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box red">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i>Deposit Transaction
                </div>
                @*<div class="actions">
                    <a href="javascript:;" class="btn btn-default btn-sm" onclick='ShowView("@Url.Action("Create","CMSDepositPackage")")'>
                        <i class="fa fa-plus"></i> Add New
                    </a>
                </div>*@
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover dt-responsive" id="sample_3">
                    <thead>
                        <tr>
                            <th class="text-center"> Deposit No </th>
                            <th class="text-center"> Create Date</th>
                            <th class="text-center"> Customer Name </th>
                            <th class="text-center"> Wallet Money </th>
                            <th class="text-center"> Package Name </th>
                            <th class="text-center"> Package SMS </th>
                            <th class="text-center"> Package Price </th>
                            <th class="text-center"> Payment Method </th>
                            <th class="text-center"> Pay Coin </th>

                            <th class="text-center"> Status </th>
                            <th class="text-center"> Action </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                        <tr class="odd gradeX">
                            <td class="text-center">@item.DepositNo</td>
                            <td class="text-center"> @item.CreatedDate</td>
                            <td class="text-center">@item.CustomerName</td>
                            <td class="text-center">@item.WalletMoney</td>
                            <td class="text-center">@item.PackageName</td>
                            <td class="text-center">@string.Format("{0:N0}", item.PackageSMS)</td>
                            <td class="text-center">@string.Format("{0:N0}", item.PackagePrice)</td>
                            <td class="text-center">@item.PaymentMethodName</td>
                            <td class="text-center">@item.PayCoin</td>

                            <td class="text-center">
                                @*   @Commons.DepositStatus.WaitingPay.GetDescription(Enum.GetName(typeof(Commons.DepositStatus), item.Status))*@
                            </td>
                            <td class="text-center">
                                @*<a href="javascript:void(0)"
            onclick='ShowView("@Url.Action("View", "CMSDepositPackage", new { Id = item.Id })")'
            class="btn btn-primary btn-xs view details"><i class="fa fa-eye"></i>&nbsp;View</a>&nbsp;&nbsp;*@
                                <a href="javascript:void(0)"
                                   onclick='ShowView("@Url.Action("Edit", "CMSDepositTransaction", new { Id = item.Id })")'
                                   class="btn btn-info btn-xs edit details"><i class="fa fa-edit"></i>&nbsp;Edit</a>&nbsp;&nbsp;
                                <a href="javascript:void(0)"
                                   onclick='ShowView("@Url.Action("Delete","CMSDepositTransaction",new { Id=item.Id})")'
                                   class="btn btn-danger btn-xs delete details"><i class="fa fa-trash-o"></i>&nbsp;Delete</a>
                            </td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

