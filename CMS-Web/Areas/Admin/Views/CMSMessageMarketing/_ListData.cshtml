        "bStateSave": true, // save datatable state(pagination, sort, etc) in cookie.
        "lengthMenu": [
            [6, 15, 20, -1],
            [6, 15, 20, "All"] // change per page values here
        ],
        "pageLength": 6,
        "columnDefs": [
            { "orderable": false, "targets": [0,7] },
            { "width": "8%", "targets": [0] },
