@{
    Layout = null;
}
@model List<CMS_DTO.CMSMarketing.CMS_MarketingModels>
@using CMS_Shared
<div class="table-responsive">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box red">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i>Message Marketing
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover dt-responsive" id="sample_3">
                    <thead>
                        <tr>
                            <th class="text-center"> Customer Name </th>
                            <th class="text-center"> Message Content </th>
                            <th class="text-center"> Send To </th>
                            <th class="text-center"> Operator Name </th>
                            <th class="text-center"> SMS Price </th>
                            <th class="text-center"> Status </th>
                            <th class="text-center"> Time Input </th>
                            <th class="text-center"> Send From </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                        <tr class="odd gradeX">
                            <td class="text-center">@item.CustomerName</td>
                            <td class="text-center">@item.SMSContent</td>
                            <td class="text-center">@item.SendTo</td>
                            <td class="text-center">@item.OperatorName</td>
                            <td class="text-center">@item.SMSPrice</td>
                            <td class="text-center">
                                @Enum.GetName(typeof(Commons.SMSStatus), item.Status)
                            </td>
                            <td class="text-center">@item.TimeInput</td>
                            <td class="text-center">@item.SendFrom</td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

