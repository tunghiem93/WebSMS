
@model CMS_DTO.CMSSysConfig.CMS_SysConfigModels
@using CMS_Shared
@{
    Html.EnableUnobtrusiveJavaScript(true);
    var _ID = Model.Id;
}
@Html.HiddenFor(model =>model.Id)

<div class="row form-horizontal form-label-left" style="margin-bottom:15px;">
    <div class="form-group">
        <label class="control-label col-md-1 col-sm-1 col-xs-12 fontLighter"></label>
        <div class="col-md-10 col-sm-10 col-xs-12">
            @Html.TextAreaFor(model => model.SiteContent, new { @class = "form-control ckeditor", placeholder = "Site duy trì" })
            @Html.ValidationMessageFor(model => model.SiteContent, null, new { @class = "label" })
        </div>
    </div>
</div>

