            @Html.TextBoxFor(model => model.ComInfo.Description, new { @class = "form-control", @placeholder = "Description", @autocomplete = "off" })
            @Html.ValidationMessageFor(model => model.ComInfo.Description, null, new { @class = "label label-danger" })
        </div>
    </div>

