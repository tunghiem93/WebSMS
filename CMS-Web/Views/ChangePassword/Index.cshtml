@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model CMS_DTO.CMSCustomer.CustomerChangePasswordModel
<!-- container -->
<div class="container">
    @Html.Partial("_breadcrumb", new Dictionary<string, string> { { "A", "Home" }, { "B", "Change Password" } })
    <div class="page-header bottom-shadow">
        <h3>Change Password</h3>
        <p> Theme Change Password</p>
    </div><!-- Section Header /- -->
</div><!-- container /- -->
<!-- Page Breadcrumb /- -->

<div class="page-wizard">
    <!-- container -->
    <div class="container">
        @if (Model != null && Model.Status)
        {
            <div class="alert alert-success">
                <strong>Successful!</strong> Your password change successful
            </div>
        }

        <!-- contact-form-details -->
        <div class="contact-form-details row">
            <!-- col-md-6 -->
            <div class="col-md-6 col-sm-6">
                <div class="section-header">
                    <h3>Change Password</h3>
                </div><!-- Section Header Over -->
                <div class="contact-form bottom-shadow">
                    @using (@Html.BeginForm("Index", "ChangePassword", FormMethod.Post, new { @id = "form-create", @class = "form-horizontal login-page", @enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            <label class="col-md-4">Old Password</label>
                            <div class="col-md-8">
                                @Html.PasswordFor(model => model.LastPassword, new { @class = "form-control", @placeholder = "*****", @autocomplete = "off" })
                                @Html.ValidationMessageFor(model => model.LastPassword, null, new { @class = "label label-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password" class="col-md-4">Password</label>
                            <div class="col-md-8">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @id = "password", @placeholder = "*****", @autocomplete = "off" })
                                @Html.ValidationMessageFor(model => model.Password, null, new { @class = "label label-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="col-md-4">Password 2</label>
                            <div class="col-md-8">
                                @Html.PasswordFor(model => model.Password2, new { @class = "form-control", @id = "password2", @placeholder = "*****", @autocomplete = "off" })
                                @Html.ValidationMessageFor(model => model.Password2, null, new { @class = "label label-danger" })
                            </div>
                        </div>
                        <div class="drop-line bottom-shadow"></div>
                        <div class="form-group">
                            <a title=">Forgot Password " href="@Url.Action("Index","ForgotPassword")">Forgot your Password ?</a>
                            <input type="submit" value="Change password" class="btn btn-default  pull-right">
                        </div>
                    }
                </div>
            </div><!-- col-md-6 /- -->
        </div><!-- Contact Form details /- -->
    </div>
</div>
